[Unit]
Description=Prometheus disk usage exporter
Documentation=https://github.com/dundee/disk_usage_exporter

[Service]
Restart=always
User={{ exporter_disk_usage_user }}
ExecStart={{ exporter_disk_usage_binary_path }}/{{ exporter_disk_usage_binary_name }} --config {{ exporter_disk_usage_config_path }}/config.yml
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
